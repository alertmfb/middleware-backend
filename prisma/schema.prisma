generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstname String?
  lastname  String?
  password  String
  role      ROLE     @default(MEMBER)
  invites   Invite[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Invite {
  id         String       @id @default(uuid())
  email      String       @unique
  invitedBy  User         @relation(fields: [userEmail], references: [email])
  userEmail  String
  status     InviteStatus @default(PENDING)
  role       ROLE
  invitedAt  DateTime     @default(now())
  acceptedAt DateTime?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now())
}

enum ROLE {
  SUPER_ADMIN
  ADMIN
  MEMBER
}

enum InviteStatus {
  PENDING
  ACCEPTED
}
